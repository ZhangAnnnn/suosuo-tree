.container {
  width: 100%;
  min-height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  padding-top: 0;
  margin-top: 0;
}

.project-swiper {
  width: 100%;
  height: calc((100vw * 9) / 16); /* 16:9的比例 */
  background: #f5f5f5;
  margin-top: 0;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.project-content {
  padding: 0 40rpx 40rpx 40rpx;
  background: #ffffff;
  min-height: 100vh;
}

.project-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333333;
  margin: 30rpx 0 40rpx 0;
  line-height: 1.3;
}

.project-description {
  font-size: 26rpx;
  color: #888888;
  line-height: 1.8;
  margin-top: 40rpx;
}

.project-stats {
  margin-bottom: 40rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.stat-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.stat-item text {
  font-size: 30rpx;
  color: #4CAF50;
}

.project-progress {
  margin-bottom: 40rpx;
  background: #F8F8F8;
  padding: 30rpx;
  border-radius: 16rpx;
}

.progress-info {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-target {
  font-size: 28rpx;
  color: #333333;
}

.progress-bar-wrapper {
  position: relative;
  padding: 10rpx 0;
  margin: 0 10rpx;
  margin-bottom: 30rpx;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background: #E0E0E0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #8BC34A);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-tree-icon {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: -20rpx;
  transform: translateX(-50%);
  transition: left 0.3s ease;
}

.progress-percent {
  position: absolute;
  top: 40rpx;
  transform: translateX(-50%);
  transition: left 0.3s ease;
  white-space: nowrap;
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: 500;
}

.progress-detail {
  display: flex;
  justify-content: flex-start;
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: 500;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin: 32rpx 0 16rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.my-trees-section {
  margin-top: 40rpx;
  padding: 30rpx;
  background: #F8F8F8;
  border-radius: 16rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.share-button {
  width: 60rpx;
  height: 60rpx;
  background: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.share-icon {
  width: 32rpx;
  height: 32rpx;
}

.tree-effects {
  margin-top: 30rpx;
  padding: 24rpx;
}

.effect-summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #76611C;
  font-weight: bold;
  padding: 16rpx 24rpx;
  background: #EEDAB5;
  border-radius: 8rpx;
  width: 100%;
  box-sizing: border-box;
}

.arrow-icon {
  width: 16rpx;
  height: 16rpx;
  border-right: 3rpx solid #76611C;
  border-bottom: 3rpx solid #76611C;
  transform: rotate(-45deg);
  transition: transform 0.3s ease;
  margin-left: 16rpx;
}

.arrow-icon.arrow-up {
  transform: rotate(45deg);
}

.effect-details {
  padding-top: 16rpx;
}

.effect-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.effect-date {
  font-size: 24rpx;
  color: #76611C;
  min-width: 120rpx;
}

.effect-content {
  font-size: 26rpx;
  color: #76611C;
  flex: 1;
  text-align: right;
}

.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.share-content {
  background: #ffffff;
  border-radius: 24rpx;
  width: 680rpx;
  max-height: 90vh;
  overflow: hidden;
}

.share-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.share-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
}

.close-btn {
  font-size: 48rpx;
  color: #999999;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-image-container {
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f8f8;
}

.share-image {
  width: 600rpx;
  height: 800rpx; /* 4:3 竖向比例 */
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
  padding: 200rpx 0;
}

.save-image-btn {
  margin: 30rpx 40rpx 40rpx 40rpx;
  background: #4CAF50;
  color: #ffffff;
  font-size: 32rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  border: none;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.2);
}

.save-image-btn::after {
  border: none;
}

.save-image-btn:active {
  transform: scale(0.98);
  transition: all 0.1s ease;
}

.timeline {
  position: relative;
  padding-left: 60rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 28rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: repeating-linear-gradient(to bottom, #4CAF50 0, #4CAF50 8rpx, transparent 8rpx, transparent 16rpx);
}

.timeline-item {
  position: relative;
  margin-bottom: 40rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-icon {
  position: absolute;
  left: -60rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tree-icon {
  width: 36rpx;
  height: 36rpx;
}

.timeline-content {
  background: #ffffff;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tree-status {
  margin-bottom: 16rpx;
}

.tree-count {
  font-size: 30rpx;
  color: #4CAF50;
  font-weight: 500;
}

.tree-details {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.plant-date {
  margin-bottom: 8rpx;
}

.days-passed {
  color: #999999;
}

.bottom-space {
  height: 120rpx;
}

.join-button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 40rpx 40rpx 40rpx;
  background: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.join-button {
  width: 100%;
  height: 88rpx;
  background: #4CAF50;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.join-button::after {
  border: none;
}

.join-button:active {
  background: #45a049;
  transform: scale(0.98);
  transition: all 0.1s ease;
}

/* 参与种树半屏弹窗样式 */
.donation-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1001;
}

.donation-content {
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  width: 100%;
  max-height: 70vh;
  overflow: hidden;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.donation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.donation-header::after {
  content: '';
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
}

.donation-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
}

.donation-body {
  padding: 40rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.donation-description {
  text-align: center;
  margin-bottom: 40rpx;
}

.donation-description text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

.donation-options {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.donation-option {
  background: #f8f8f8;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.donation-option.selected {
  background: #e8f5e8;
  border-color: #4CAF50;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.2);
}

.option-amount {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.donation-option.selected .option-amount {
  color: #4CAF50;
}

.option-trees {
  font-size: 24rpx;
  color: #666666;
}

.donation-option.selected .option-trees {
  color: #4CAF50;
}

.custom-donation {
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 30rpx;
}

.custom-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.custom-input-wrapper {
  position: relative;
  background: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  transition: border-color 0.3s ease;
}

.custom-input-wrapper:focus-within {
  border-color: #4CAF50;
}

.currency-symbol {
  font-size: 32rpx;
  color: #333333;
  margin-right: 10rpx;
  font-weight: 500;
}

.custom-input {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
  border: none;
  outline: none;
  background: transparent;
}

.custom-trees {
  position: absolute;
  right: 20rpx;
  font-size: 24rpx;
  color: #4CAF50;
  white-space: nowrap;
}

.donation-footer {
  padding: 30rpx 40rpx 40rpx 40rpx;
  background: #ffffff;
  border-top: 1rpx solid #f0f0f0;
}

.confirm-donation-btn {
  width: 100%;
  height: 88rpx;
  background: #4CAF50;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.confirm-donation-btn::after {
  border: none;
}

.confirm-donation-btn:disabled {
  background: #cccccc;
  color: #999999;
  box-shadow: none;
}

.confirm-donation-btn:not(:disabled):active {
  background: #45a049;
  transform: scale(0.98);
}

/* 项目公示模块样式 */
.project-disclosure-section {
  margin-top: 40rpx;
  padding: 30rpx;
  background: #F8F8F8;
  border-radius: 16rpx;
}

.disclosure-content {
  margin-top: 20rpx;
}

.disclosure-summary {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.verify-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.summary-text {
  font-size: 28rpx;
  color: #4CAF50;
  line-height: 1.5;
}

.disclosure-list {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}

.disclosure-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.disclosure-item:last-child {
  border-bottom: none;
}

.disclosure-item::before {
  content: '';
  position: absolute;
  left: 24rpx;
  top: 0;
  bottom: 0;
  width: 3rpx;
  background: linear-gradient(to bottom, #4CAF50, #8BC34A);
  border-radius: 2rpx;
}

.disclosure-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding-left: 20rpx;
}

.disclosure-date {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.disclosure-amount {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
  background: #e8f5e8;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.disclosure-detail {
  padding-left: 20rpx;
  margin-bottom: 8rpx;
}

.disclosure-detail text {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.disclosure-location {
  padding-left: 20rpx;
}

.disclosure-location text {
  font-size: 24rpx;
  color: #888888;
}

/* 沙尘暴详情弹窗 */
.dust-storm-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.dust-storm-modal.show {
  opacity: 1;
  visibility: visible;
}

.dust-storm-content {
  background: #ffffff;
  border-radius: 24rpx;
  width: 680rpx;
  max-height: 80vh;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.dust-storm-modal.show .dust-storm-content {
  transform: scale(1);
}

.dust-storm-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.dust-storm-title {
  font-size: 34rpx;
  color: #333333;
  font-weight: bold;
}

.dust-storm-list {
  padding: 24rpx 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.dust-storm-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.dust-storm-date {
  font-size: 28rpx;
  color: #76611C;
  min-width: 120rpx;
}

.dust-storm-info {
  font-size: 28rpx;
  color: #76611C;
  flex: 1;
  text-align: right;
} 