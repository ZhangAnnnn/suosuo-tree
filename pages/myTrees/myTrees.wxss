.container {
  padding: 30rpx;
  background-color: #f5f5f5;
}

.my-trees-content {
  width: 100%;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
}

.tree-list {
  margin-top: 20px;
}

.project-list {
  width: 100%;
}

.project-item {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding: 40rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  min-height: 280rpx;
  height: auto;
}

.project-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-right: 40rpx;
  flex-shrink: 0;
}

.project-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 240rpx;
  height: auto;
  padding: 0;
}

.project-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
  line-height: 1.2;
}

.trees-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.join-time {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.trees-section-title {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.trees-status-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.trees-status {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
}

.tree-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.tree-count {
  font-size: 30rpx;
  font-weight: 500;
  color: #4CAF50;
}

.days-info {
  font-size: 28rpx;
  color: #666666;
  margin-left: 44rpx;
  margin-top: 8rpx;
}

.project-time {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.plant-date {
  font-size: 28rpx;
  color: #666666;
}

.days-passed {
  font-size: 30rpx;
  color: #4CAF50;
  font-weight: 500;
}

.project-progress {
  width: 100%;
}

.progress-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.progress-bar {
  width: 100%;
  height: 10rpx;
  background: #E0E0E0;
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background: #4CAF50;
  border-radius: 5rpx;
  transition: width 0.3s ease;
}